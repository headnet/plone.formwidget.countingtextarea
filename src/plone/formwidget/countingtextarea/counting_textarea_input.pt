<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag="">

<input type="hidden" tal:attributes="id string:${view/id}-max-length;
                                     name string:${view/id}-max-length;
                                     value string:${view/field/max_length}"/>

<textarea
   id="" name="" class="" cols="" rows=""
   tabindex="" disabled="" readonly="" accesskey=""
   tal:attributes="id view/id;
                   name view/name;
                   class view/klass;
                   style view/style;
                   title view/title;
                   lang view/lang;
                   onclick view/onclick;
                   ondblclick view/ondblclick;
                   onmousedown view/onmousedown;
                   onmouseup view/onmouseup;
                   onmouseover view/onmouseover;
                   onmousemove view/onmousemove;
                   onmouseout view/onmouseout;
                   onkeypress view/onkeypress;
                   onkeydown string:textCounter(this,jQuery('#${view/id}-count').get(0),${view/field/max_length});
                   onkeyup string:textCounter(this,jQuery('#${view/id}-count').get(0),${view/field/max_length});
                   disabled view/disabled;
                   tabindex view/tabindex;
                   onfocus view/onfocus;
                   onblur view/onblur;
                   onchange view/onchange;
                   cols view/cols;
                   rows view/rows;
                   readonly view/readonly;
                   accesskey view/accesskey;
                   onselect view/onselect"
   tal:content="view/value" />

<div i18n:domain="plone"
     i18n:translate="label_characters_remaining">
  <input readonly="readonly"
	 type="text"
	 size="4"
	 i18n:name="count"
	 tal:attributes="id string:${view/id}-count;
			 name string:${view/id}-count;
			 value python:view.field.max_length - len(view.value)"/>
  characters remaining
</div>

</html>
